<?xml version="1.0" encoding="utf-8"?>

<!-- res/drawable/bottom_border_rounded.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fond du header -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" /> <!-- Couleur de fond -->
            <corners android:radius="50dp" /> <!-- Coins arrondis pour le fond -->
        </shape>
    </item>

    <!-- Bordure en bas -->
    <item android:top="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">

            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp" />
        </shape>
    </item>
</layer-list>